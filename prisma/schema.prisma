generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @map("_id")
  username String @unique
  email    String @unique
  password String
  secret   String
  vault    Vault[]
}

model Vault {
  id     String @id @map("_id")
  name   String @unique
  // credentials Credential[];
  User   User   @relation(fields: [userId], references: [id], onDelete: Cascade) 
  userId String 
}
