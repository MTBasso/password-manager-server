model User {work
  id       String @id @map("_id")
  username String @unique
  email    String @unique
  password String
  secret   String
  vault    Vault[]
}

model Vault {
  id     String @id @map("_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade) 
  userId String 
  name   String
  credential Credential[]
}

model Credential {
  id String @id @map("_id")
  vault Vault @relation(fields: [vaultId], references: [id], onDelete: Cascade)
  vaultId String
  name String
  website String
  login String
  password String
}